<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_account_num"
                    android:layout_gravity="center"
                    android:tint="@color/black"
                    android:padding="1dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/etAccountNum"
                    android:hint="@string/accountNumber"
                    android:minLines="1"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:textSize="@dimen/text_ten"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blur_black_color"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_holder_name"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:layout_width="22dp"
                    android:tint="@color/black"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/etHolderName"
                    android:hint="@string/holderName"
                    android:minLines="1"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textSize="@dimen/text_ten"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blur_black_color"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_ifsc"
                    android:layout_gravity="center"
                    android:layout_width="22dp"
                    android:tint="@color/black"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/etIfsc"
                    android:hint="@string/ifsc"
                    android:minLines="1"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textSize="@dimen/text_ten"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blur_black_color"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bank"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:layout_width="22dp"
                    android:tint="@color/black"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/etBankName"
                    android:hint="@string/bankName"
                    android:minLines="1"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textSize="@dimen/text_ten"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blur_black_color"/>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="1dp"
                    android:background="@color/blur_black_color"
                    android:layerType="software"/>
                <TextView
                    android:padding="5dp"
                    android:background="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and/or"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_paytm"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:layout_width="22dp"
                    android:tint="@color/black"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/etPaytmNumber"
                    android:hint="@string/PaytmNum"
                    android:minLines="1"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/text_ten"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blur_black_color"/>


            <Button
                android:id="@+id/btnSignUp"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:layout_marginTop="55dp"
                android:background="@drawable/button_bg_fill_orange"
                android:layout_width="180dp"
                android:layout_height="50dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
